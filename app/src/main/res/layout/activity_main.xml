<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:text="@string/main_title"
        android:textSize="35sp"
        android:textColor="@color/colorPrimary"
        android:ems="10"
        android:id="@+id/main_title"
        android:layout_above="@+id/gtInput"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="75dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:maxLines="1"
        android:maxLength="15"
        android:ems="10"
        android:background="@color/colorWhite"
        android:textColor="@color/colorBlack"
        android:textColorHint="@color/colorBlack"
        android:id="@+id/gtInput"
        android:hint="@string/gamertag_input" />

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/gtInput"
        android:layout_centerHorizontal="true"
        android:id="@+id/getStatsButton"
        android:text="@string/stats_button_text"
        android:gravity="center"
        android:background="@drawable/stats_button_bg"
        android:textColor="@color/colorPrimary"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/getStatsButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:textColor="@color/colorAccent"
        android:text="@string/gt_not_found"
        android:visibility="invisible"/>

</RelativeLayout>
