<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/outer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/layout_warzone"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/layout_kills_W"
                android:weightSum="3"
                android:layout_marginTop="10dp" >

                <TextView
                    android:id="@+id/total_kills"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/kills"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15sp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/total_deaths"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/deaths"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15sp"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/total_assists"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/assists"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15sp"
                    android:layout_weight="1"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/layout_kills_value_W"
                android:weightSum="3">

                <TextView
                    android:id="@+id/total_kills_value_W"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/temp_value"
                    android:textColor="@color/colorWhite"
                    android:textSize="15sp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/total_deaths_value_W"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/temp_value"
                    android:textColor="@color/colorWhite"
                    android:textSize="15sp"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/total_assists_value_W"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/temp_value"
                    android:textColor="@color/colorWhite"
                    android:textSize="15sp"
                    android:layout_weight="1"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:weightSum="3" >
                <ImageView
                    android:id="@+id/warthog_img"
                    android:src="@drawable/warthog"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:contentDescription="@string/image_of_vehicle" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1" >
                    <TextView
                        android:id="@+id/kd_ratio_W"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:gravity="center"
                        android:text="@string/kd_ratio"
                        android:textColor="@color/colorPrimary"
                        android:textSize="15sp" />
                    <TextView
                        android:id="@+id/kd_ratio_value_W"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/colorWhite"
                        android:textSize="15sp"
                        android:text="@string/temp_value"
                        android:maxLines="1" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/banshee_image"
                    android:src="@drawable/banshee"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:contentDescription="@string/image_of_vehicle" />
            </LinearLayout>

            <View style="@style/Line_divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/layout_games"
                android:weightSum="4"
                android:layout_marginTop="10dp" >

                <TextView
                    android:id="@+id/total_games_W"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/games_played"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15sp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/total_wins_W"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/wins"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15sp"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/total_losses_W"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/losses"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15sp"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/total_ties_W"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/ties"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15sp"
                    android:layout_weight="1"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/layout_games_value"
                android:weightSum="4">

                <TextView
                    android:id="@+id/total_games_value_W"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/temp_value"
                    android:textColor="@color/colorWhite"
                    android:textSize="15sp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/total_wins_value_W"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/temp_value"
                    android:textColor="@color/colorWhite"
                    android:textSize="15sp"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/total_losses_value_W"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/temp_value"
                    android:textColor="@color/colorWhite"
                    android:textSize="15sp"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/total_ties_value_W"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/temp_value"
                    android:textColor="@color/colorWhite"
                    android:textSize="15sp"
                    android:layout_weight="1"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:weightSum="3" >
                <ImageView
                    android:id="@+id/red_team_logo"
                    android:src="@drawable/red"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:contentDescription="@string/image_of_team" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1" >
                    <TextView
                        android:id="@+id/wl_ratio_W"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:gravity="center"
                        android:text="@string/wl_ratio"
                        android:textColor="@color/colorPrimary"
                        android:textSize="15sp" />
                    <TextView
                        android:id="@+id/wl_ratio_value_W"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/colorWhite"
                        android:textSize="15sp"
                        android:text="@string/temp_value"
                        android:maxLines="1" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/blue_team_logo"
                    android:src="@drawable/blue"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:contentDescription="@string/image_of_team" />
            </LinearLayout>

            <View
                android:layout_marginTop="10dp"
                style="@style/Line_divider" />
        </LinearLayout>
    </ScrollView>

    <ProgressBar
        android:id="@+id/pBar_W"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        style="?android:attr/progressBarStyle"
        android:visibility="invisible"
        android:layout_centerInParent="true"/>
</RelativeLayout>